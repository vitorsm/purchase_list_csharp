
@{
    Layout = null;
    ViewBag.Title = "Details";
}

<script src="~/js/products/product_dialog.js"></script>

<div id="product-crud-modal-id" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title"></h4>
            </div>
            <div class="modal-body">

                <div class="form-group" field-name="Id">
                    <label class="control-label">ID</label>
                    <input class="form-control" disabled />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group" field-name="Name">
                    <label class="control-label">Name</label>
                    <input class="form-control" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group" field-name="CreatedBy">
                    <label class="control-label">Created By</label>
                    <input class="form-control" disabled />
                </div>
                <div class="form-group" field-name="CreatedAt">
                    <label class="control-label">Created At</label>
                    <input class="form-control" disabled />
                </div>
                <div class="form-group" field-name="ModifiedAt">
                    <label class="control-label">Modified At</label>
                    <input class="form-control" disabled />
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="product-dialog-save-button-id">Save changes</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
