@model IEnumerable<purchase_list_bg.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<button id="create-product-button-id" data-toggle="modal" data-target="#product-crud-modal-id">Abrir modal</button>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifiedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedAt)
            </td>
            <td>
                <img src="~/images/edit-regular.svg" alt="edit" width="24" class="table-action" /> |
                <img src="~/images/trash-alt-regular.svg" alt="edit" width="24" class="table-action" /> 
            </td>
        </tr>
}
    </tbody>
</table>

<partial name="_ProductDialog.cshtml" />